<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.qiaobin.tofight.PkActivity"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挑战方："
        android:id="@+id/textView_fight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_user"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_fight"
        android:layout_toEndOf="@+id/textView_fight"
        android:text=" " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------------------------->"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="迎战方："
        android:id="@+id/textView_to_fight"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textView_to_fight_name"
        android:layout_alignBottom="@+id/textView_to_fight"
        android:layout_toRightOf="@+id/textView_to_fight"
        android:layout_toEndOf="@+id/textView_to_fight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挑战结果:"
        android:id="@+id/textView_result"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="挑战方胜"
        android:id="@+id/textView_A_win_or_los"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView_result"
        android:layout_alignRight="@+id/textView_user"
        android:layout_alignEnd="@+id/textView_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="迎战方胜"
        android:id="@+id/textView_B_win_or_los"
        android:layout_alignBottom="@+id/textView_A_win_or_los"
        android:layout_alignLeft="@+id/textView_to_fight"
        android:layout_alignStart="@+id/textView_to_fight" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_A"
        android:layout_below="@+id/textView_A_win_or_los"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/abc_btn_check_material"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/abc_btn_check_material"
        android:layout_alignTop="@+id/imageView_A"
        android:layout_alignRight="@+id/textView_B_win_or_los"
        android:layout_alignEnd="@+id/textView_B_win_or_los" />
</RelativeLayout>
